# Chess Analytics - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# Database URL (if using direct PostgreSQL connection)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# FRONTEND CONFIGURATION (Vite/React)
# =============================================================================
VITE_ANALYSIS_API_URL=http://localhost:8002
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# API Server Configuration
PORT=8002
HOST=0.0.0.0

# =============================================================================
# STOCKFISH CONFIGURATION
# =============================================================================
# Path to Stockfish executable (adjust for your OS)
# Windows
STOCKFISH_PATH=./stockfish/stockfish.exe
# Linux/Mac
# STOCKFISH_PATH=./stockfish/stockfish

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
VITE_ENABLE_MOCK_DATA=false
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# PRODUCTION/DEPLOYMENT SETTINGS
# =============================================================================
# Uncomment and configure for production deployments

# Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your_railway_project_id

# Vercel
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app

# Render
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret for custom authentication (REQUIRED - no default for security)
# Must be a secure random string, minimum 32 characters
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Optional JWT claim validation (recommended for production)
# JWT_ISSUER=https://your-auth-provider.com
# JWT_AUDIENCE=https://your-api.com

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================
# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (get from https://dashboard.stripe.com/products)
# Create your products/prices in Stripe and use those IDs here
STRIPE_PRICE_ID_PRO_MONTHLY=price_YOUR_ACTUAL_MONTHLY_ID
STRIPE_PRICE_ID_PRO_YEARLY=price_YOUR_ACTUAL_YEARLY_ID

# Frontend Stripe key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# =============================================================================
# USAGE LIMITS (FREE TIER)
# =============================================================================
# Free tier usage limits (24-hour rolling window)
FREE_TIER_IMPORTS_PER_DAY=100
FREE_TIER_ANALYSES_PER_DAY=5

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Microsoft Clarity (optional - for user behavior analytics)
# Get from: https://clarity.microsoft.com
VITE_CLARITY_PROJECT_ID=your_clarity_project_id_here

# Sentry (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Logging
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# =============================================================================
# EXTERNAL SERVICES (if used)
# =============================================================================
# Email service (if implementing email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Redis (if using for caching)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database (if using separate test DB)
# TEST_DATABASE_URL=postgresql://postgres:test_password@localhost:5432/chess_analytics_test

# Test Supabase project
# TEST_SUPABASE_URL=https://your-test-project.supabase.co
# TEST_SUPABASE_SERVICE_ROLE_KEY=your_test_service_role_key
# TEST_SUPABASE_ANON_KEY=your_test_anon_key
